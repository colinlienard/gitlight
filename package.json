{
	"name": "gitlight",
	"version": "0.17.5",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "vite build",
		"build:tauri": "APP_ENV=tauri tauri build",
		"build:vercel": "APP_ENV=vercel vite build",
		"dev": "vite dev",
		"dev:tauri": "APP_ENV=tauri tauri dev",
		"lint-fix": "prettier --write . && ESLINT_USE_FLAT_CONFIG=false eslint --fix . && stylelint --fix \"src/**/*.{scss,svelte}\"",
		"lint:rs": "mkdir build && cd src-tauri && cargo clippy -- -Dwarnings --no-deps; cargo fmt -- --check",
		"lint:ts": "prettier --check . && ESLINT_USE_FLAT_CONFIG=false eslint --max-warnings=0 . && stylelint --max-warnings=0 \"src/**/*.{scss,svelte}\"",
		"prepare": "svelte-kit sync",
		"preview": "vite preview",
		"typecheck": "svelte-check --tsconfig ./tsconfig.json"
	},
	"dependencies": {
		"@rive-app/canvas": "^2.25.3",
		"@tauri-apps/api": "^1.6.0",
		"overlayscrollbars": "^2.10.1",
		"tauri-plugin-autostart-api": "github:tauri-apps/tauri-plugin-autostart",
		"worker-timers": "^7.1.8"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@sveltejs/kit": "^2.15.0",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tauri-apps/cli": "^1.6.3",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^2.46.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"sass": "^1.83.0",
		"stylelint": "^16.12.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-idiomatic-order": "^10.0.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"stylelint-prettier": "^5.0.2",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"tslib": "^2.8.1",
		"typescript": "^5.7.2",
		"vite": "^5.4.11"
	}
}
